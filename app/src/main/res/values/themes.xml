<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeterTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/background</item>
        <item name="background">@color/background</item>
        <item name="backgroundColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowBackgroundFallback">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorControlNormal">@color/on_primary</item>
        <item name="android:colorControlNormal">@color/on_primary</item>

        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnPrimarySurface">@color/on_primary</item>
        <item name="colorOnSurface">@color/on_background</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textColorHighlight">@color/on_background</item>
        <item name="android:textColorPrimary">@color/on_background</item>

        <item name="colorError">@color/error</item>

        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="textAppearanceHeadline1">@style/Text_H1</item>
        <item name="textAppearanceHeadline2">@style/Text_H2</item>
        <item name="textAppearanceHeadline3">@style/Text_H3</item>
        <item name="textAppearanceHeadline4">@style/Text_H4</item>
        <item name="textAppearanceHeadline5">@style/Text_H5</item>
        <item name="textAppearanceHeadline6">@style/Text_H6</item>
        <item name="textAppearanceSubtitle1">@style/Text_S1</item>
        <item name="textAppearanceSubtitle2">@style/Text_S2</item>
        <item name="textAppearanceBody1">@style/Text_B1</item>
        <item name="textAppearanceBody2">@style/Text_B2</item>
        <item name="textAppearanceCaption">@style/Text_Caption</item>
        <item name="textAppearanceButton">@style/Text_Button</item>
        <item name="textAppearanceOverline">@style/Text_Overline</item>
        <item name="android:textAppearanceButton">@style/Text_Button</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="chipStyle">@style/ChipChoice</item>

        <item name="android:checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="android:radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="android:switchStyle">@style/Widget.App.Switch</item>

        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="ExposedDropDown" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/on_background</item>
        <item name="colorOnSurface">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="ButtonError" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/error</item>
    </style>

    <style name="ButtonPrimaryIcon" parent="Widget.MaterialComponents.Button.Icon" />

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="ButtonTernary" parent="Widget.MaterialComponents.Button.TextButton" />

    <style name="ChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/surface</item>
        <item name="chipIconVisible">true</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TinyButton</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TinyButton</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TinyButton</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="ThemeOverlay.App.TinyButton" parent="">
        <item name="colorOnSurface">@color/on_background</item>
        <item name="colorSecondary">@color/primary</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="ImageCardBack" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- region Textstyles-->

    <style name="Text_H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/on_background</item>
        <item name="fontFamily">@font/lato_light</item>
